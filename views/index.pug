extends layout

block content
  h2.page-header Add File and Word to replace!
  p Please add using the form below
  form(method="post", action="/upload" , enctype='multipart/form-data')
    .form-group
      label Word to replace:
      input.form-control(type="text", placeholder="Enter word to replace", name="word")
    .form-group
      label Word replacements:
      input.form-control(type="text", placeholder="Enter name to generate files for, separated by comma", name="replacement")
    .form-group
      label File 
      input.form-control(type="file", name="fileupload")
    input.btn.btn-primary(type="submit", name='submit', value='save')